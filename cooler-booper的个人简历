from fpdf import FPDF

class PDF(FPDF):
    def header(self):
        self.set_font('HarmonyOSSansSC', '', 12)
        self.cell(0, 10, '吴海锋', 0, 1, 'C')

    def chapter_title(self, title):
        self.set_font('HarmonyOSSansSC', '', 12)
        self.cell(0, 10, title, 0, 1, 'L')
        self.ln(2)

    def chapter_body(self, body):
        self.set_font('HarmonyOSSansSC', '', 12)
        self.multi_cell(0, 10, body)
        self.ln()

# Initialize PDF
pdf = PDF()
# Add custom font
pdf.add_font('HarmonyOSSansSC', '', 'C:/Users/HUAWEI/HarmonyOS_Sans_SC_Medium.ttf', uni=True)
pdf.set_font('HarmonyOSSansSC', '', 12)
pdf.add_page()
# Job Intention
pdf.chapter_title("求职意向")
pdf.chapter_body("寻求数据分析、市场研究相关岗位")
# Personal Information
pdf.chapter_title("个人信息")
pdf.chapter_body("电话: 13098776074\n邮箱: 1669960822@qq.com, sokis2437@gmail.com\n地址: 重庆江北"\nGitHub: https://github.com/cooler-booper)
# Education Background
